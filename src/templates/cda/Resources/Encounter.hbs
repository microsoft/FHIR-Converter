{
    "fullUrl":"urn:uuid:{{ID}}",
    "resource":{
        "resourceType": "Encounter",
        "id":"{{ID}}",

        {{#if encounter.entryRelationship.observation.statusCode.code}}
            "status":{{>ValueSet/EncounterStatus.hbs code=encounter.entryRelationship.observation.statusCode.code}},
        {{else}}
            "status":"unknown",
        {{/if}}
        "class": {
          "system": "http://terminology.hl7.org/CodeSystem/v3-ActCode",
          "code": "AMB"
        },
        "type":
        [
           	{{>DataType/CodeableConcept.hbs code=encounter.code}},
        ],
        "reasonCode": [
          {
            "coding": [
              {
                "system": "http://snomed.info/sct",
                "code": "{{encounter.entryRelationship.observation.code.code}}",
                "display": "{{encounter.entryRelationship.observation.code.displayName}}"
              }
            ]
          }
        ]
        "identifier":
        [
        	{{#each (toArray encounter.id)}}
        		{{>DataType/Identifier.hbs id=this}},
            {{/each}}
        ],
        "period": {{>DataType/Period.hbs period=encounter.effectiveTime}},
        "priority":{{>DataType/CodeableConcept.hbs code=encounter.priorityCode}},

        "hospitalization":
            {
            "dischargeDisposition":{{>DataType/CodeableConcept.hbs code=encounter.dischargeDispositionCode}},
            },
     },
    "request":{
        "method":"PUT",
        "url":"Encounter/{{ID}}",
    },
},
