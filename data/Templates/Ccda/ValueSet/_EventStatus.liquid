{% case code -%}
    {% when "preparation" -%}
        "preparation",
    {% when "planned" -%}
        "preparation",
    {% when "active" -%}
        "in-progress",
    {% when "in-progress" -%}
        "in-progress",
    {% when "abandoned" -%}
        "not-done",
    {% when "not-done" -%}
        "not-done",
    {% when "suspended" -%}
        "on-hold",
    {% when "on-hold" -%}
        "on-hold",
    {% when "failed" -%}
        "stopped",
    {% when "stopped" -%}
        "stopped",
    {% when "completed" -%}
        "completed",
    {% when "complete" -%}
        "completed",
    {% when "entered-in-error" -%}
        "entered-in-error",
    {% when "error" -%}
        "entered-in-error",
    {% when "unknown" -%}
        "unknown",
    {% else -%}
        "",
{% endcase -%}