{% case code -%}
    {% when "draft" -%}
        "draft",
    {% when "active" -%}
        "active",
    {% when "suspended" -%}
        "on-hold",
    {% when "on-hold" -%}
        "on-hold",
    {% when "failed" -%}
        "revoked",
    {% when "revoked" -%}
        "revoked",
    {% when "completed" -%}
        "completed",
    {% when "entered-in-error" -%}
        "entered-in-error",
    {% when "error" -%}
        "entered-in-error",
    {% when "unknown" -%}
        "unknown",
    {% else -%}
        "",
{% endcase -%}