{% assign downcaseCode = code | downcase -%}
{% case downcaseCode -%}
    {% when "en" -%}
        "English",
    {% when "en-au" -%}
        "English (Australia)",
    {% when "en-ca" -%}
        "English (Canada)",
    {% when "en-in" -%}
        "English (India)",
    {% when "en-gb" -%}
        "English (Great Britain)",
    {% when "en-nz" -%}
        "English (New Zeland)",
    {% when "en-sg" -%}
        "English (Singapore)",
    {% when "en-us" -%}
        "English (United States)",
    {% when "es" -%}
        "Spanish",
    {% when "de" -%}
        "German",
    {% when "da" -%}
        "Danish",
    {% when "fr" -%}
        "French",
    {% else -%}
        "",
{% endcase -%}