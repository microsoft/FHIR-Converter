{% case code -%}
    {% when "planned" -%}
        "planned",
    {% when "arrived" -%}
        "arrived",
    {% when "triaged" -%}
        "triaged",
    {% when "accepted" -%}
        "triaged",
    {% when "active" -%}
        "in-progress",
    {% when "onleave" -%}
        "onleave",
    {% when "suspended" -%}
        "onleave",
    {% when "normal" -%}
        "finished",
    {% when "complete" -%}
        "finished",
    {% when "finished" -%}
        "finished",
    {% when "cancelled" -%}
        "cancelled",
    {% when "abandoned" -%}
        "cancelled",
    {% when "error" -%}
        "entered-in-error",
    {% when "entered-in-error" -%}
        "entered-in-error",
    {% when "unknown" -%}
        "unknown",
    {% else -%}
        "{{ code }}",
{% endcase -%}