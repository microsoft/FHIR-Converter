    {% elseif NDL.6 -%}
        {% evaluate Location_ID_NDL using 'ID/Location' PL: NDL.6 -%}
    {% elseif NDL.7 -%}
        {% evaluate Location_ID_NDL using 'ID/Location' PL: NDL.7 -%}
    {% elseif NDL.10 -%}
        {% evaluate Location_ID_NDL using 'ID/Location' PL: NDL.10 -%}
    {% elseif NDL.11 -%}
        {% evaluate Location_ID_NDL using 'ID/Location' PL: NDL.11 -%}
