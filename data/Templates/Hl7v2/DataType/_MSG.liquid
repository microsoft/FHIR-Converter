{% if MSG -%}
    "code":"{{ MSG.2.Value }}",
    {% if MSG.2 -%}
        "system":"http://terminology.hl7.org/CodeSystem/v2-0003",
    {% endif -%}

    {% if MSG.1 and MSG.2 and MSG.3 -%}
        {% assign var_1 = {{MSG.1.Value}} %}
        {% assign var_2 = {{MSG.2.Value}} %}
        {% assign var_3 = {{MSG.3.Value}} %}
        {% capture event_coding1 %}{{ var_1 }}^{{ var_2 }}^{{ var_3 }}{% endcapture %}
        "display":"{{event_coding1}}",
        
    {% elsif MSG.1 and MSG.2 -%}
            {% assign var_1 = {{MSG.1.Value}} %}
            {% assign var_2 = {{MSG.2.Value}} %}
            {% capture event_coding2 %}{{ var_1 }}^{{ var_2 }}{% endcapture %}
            "display":"{{event_coding2}}",
    {% endif -%}  
{% endif -%}


     