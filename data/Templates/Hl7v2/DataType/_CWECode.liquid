{% comment -%}
    CWECode datatype template is use to display code value.  
    Before calling CWECode template please ensure that value is present in associated CWE feild.
{% endcomment -%}
{% if CWE -%}
    {% if mapping -%}
        {% if CWE.1.Value -%}
            "{{ CWE.1.Value | get_property: mapping, 'code' }}"
        {% endif -%}
        {% unless CWE.1.Value -%}
            "{{ CWE.4.Value | get_property: mapping, 'code' }}"
        {% endunless %}
    {% endif -%}  
{% endif -%}
{% if CWE_internal -%}
    {% if mapping -%}
        {% if CWE_internal.1 -%}
            "{{ CWE_internal.1 | get_property: mapping, 'code' }}"
        {% endif -%}
        {% unless CWE_internal.1 -%}
            "{{ CWE_internal.4 | get_property: mapping, 'code' }}"
        {% endunless %}
    {% endif -%}  
{% endif -%}