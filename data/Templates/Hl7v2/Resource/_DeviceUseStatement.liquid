{% comment -%}
The following reference IDs are accepted by this template.

DeviceUseStatement_Subject_ID: A resource Id used to fill "subject.reference" property.
DeviceUseStatement_Source_ID: A resource Id used to fill "source.reference" property.
DeviceUseStatement_Device_ID: A resource Id used to fill "device.reference" property.
{% endcomment -%}

{
    "fullUrl":"urn:uuid:{{ ID }}",
    "resource":{
        "resourceType": "DeviceUseStatement",
        "id":"{{ ID }}",
        "subject":
        {
            "reference":"{{ DeviceUseStatement_Subject_ID }}",
        },
        "source":
        {
            "reference":"{{ DeviceUseStatement_Source_ID }}",
        },
        "device":
        {
            "reference":"{{ DeviceUseStatement_Device_ID }}",
        },
    },
    "request":{
        "method":"PUT",
        "url":"DeviceUseStatement/{{ ID }}",
    },
},
