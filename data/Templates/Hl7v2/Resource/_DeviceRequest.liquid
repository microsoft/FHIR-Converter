{% comment -%}
The following reference IDs are accepted by this template.

DeviceRequest_CodeReference_ID: A resource Id used to fill "codeReference.reference" property.
DeviceRequest_Subject_ID: A resource Id used to fill "subject.reference" property.
DeviceRequest_Encounter_ID: A resource Id used to fill "encounter.reference" property.
DeviceRequest_Requester_ID: A resource Id used to fill "requester.reference" property.
DeviceRequest_Performer_ID: A resource Id used to fill "performer.reference" property.
{% endcomment -%}

{
    "fullUrl":"urn:uuid:{{ ID }}",
    "resource":{
        "resourceType": "DeviceRequest",
        "id":"{{ ID }}",
        "codeReference":
        {
            "reference":"{{ DeviceRequest_CodeReference_ID }}",
        },
        "subject":
        {
            "reference":"{{ DeviceRequest_Subject_ID }}",
        },
        "encounter":
        {
            "reference":"{{ DeviceRequest_Encounter_ID }}",
        },
        "requester":
        {
            "reference":"{{ DeviceRequest_Requester_ID }}",
        },
        "performer":
        {
            "reference":"{{ DeviceRequest_Performer_ID }}",
        },
    },
    "request":{
        "method":"PUT",
        "url":"DeviceRequest/{{ ID }}",
    },
},
